#!/bin/bash

# Script to switch presentation mode on/off

CURRENT_VALUE=`xfconf-query -c xfce4-power-manager -p /xfce4-power-manager/presentation-mode`
SET_TO=""

if [ $CURRENT_VALUE = "true" ]
then
    SET_TO="false"
    notify-send -i display -t 4000 "Presentation mode"  Disabled
else
    SET_TO="true"
    notify-send -i display -t 4000 "Presentation mode"  Enabled
fi

xfconf-query -c xfce4-power-manager -p /xfce4-power-manager/presentation-mode --set $SET_TO
