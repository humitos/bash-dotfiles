#!/bin/bash

RTD_PATH=/home/humitos/rtfd/code
RTD_REPOSITORIES="blog pydoc.io readthedocs-build readthedocs-docker-images readthedocs.org recommonmark sphinx-autoapi sphinx_rtd_theme readthedocs-ops"

for REPO in ${RTD_REPOSITORIES}; do
  echo "Updating '${REPO}'...";
  git --git-dir ${RTD_PATH}/${REPO}/.git fetch origin --prune;
done
